<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Brands</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Manage Brands</h1>

        <!-- Form for Adding/Editing Brand -->
        <form id="brandForm" action="/brands" method="POST">
            <input type="hidden" id="brandId" name="brandId">
            <div class="input-group mb-3">
                <input type="text" id="brandName" name="brandName" class="form-control" placeholder="Brand Name" required>
                <button class="btn btn-primary" type="submit">Add Brand</button>
            </div>
        </form>

        <!-- Table for Displaying Brands -->
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Brand Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% brands.forEach(brand => { %>
                    <tr>
                        <td><%= brand._id %></td>
                        <td><%= brand.brandName %></td>
                        <td>
                            <button class="btn btn-warning" onclick="editBrand('<%= brand._id %>', '<%= brand.brandName %>')">Edit</button>
                            <form action="/brands/<%= brand._id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button class="btn btn-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script>
        function editBrand(id, name) {
            document.getElementById('brandId').value = id;
            document.getElementById('brandName').value = name;
            document.getElementById('brandForm').action = `/brands/${id}?_method=PUT`; // Change action for update
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>